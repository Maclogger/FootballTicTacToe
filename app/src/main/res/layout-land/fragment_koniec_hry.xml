<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".KoniecHryFragment"
    style="@style/mainGreenStyle">

    <TextView
        android:id="@+id/nadpisKoniecHry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/dekko"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="-20sp"
        android:text="@string/koniec_hry"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/pokracovatButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hlavnyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/dekko"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="-20sp"
        android:text="@string/je_to_remiza"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/pokracovatButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nadpisKoniecHry2" />

    <Button
        android:id="@+id/pokracovatButton"
        style="@style/secondaryGreenStyle"
        android:layout_width="250dp"
        android:fontFamily="@font/dekko"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginBottom="60dp"
        android:text="@string/pokracovat"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
